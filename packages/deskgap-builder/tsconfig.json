{
  "extends": "../tsconfig-base.json",
  "compilerOptions": {
    "outDir": "out",
    "rootDir": "src",
    "noEmitOnError": false,
  },
  "jsdoc": {
    "out": "../../scripts/jsdoc/out/builder",
    "examples": "../../scripts/jsdoc/examples",
    "access": "public"
  },
  "include": [
    "src/**/*.ts",
    "../../typings/*.d.ts"
  ],
  "exclude": [
    "../../typings/deskgap.d.ts"
  ],
  "references": [
    { "path": "../app-builder-lib" },
    { "path": "../builder-util" },
    { "path": "../builder-util-runtime" },
  ]
}