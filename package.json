{
  "name": "@deskgap-builder/monorepo",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "test"
    ]
  },
  "license": "MIT",
  "scripts": {
    "//": "do not wrap into single quotes - windows doesn't unwrap arg in this case",
    "dev": "yarn tsc -b --watch --preserveWatchOutput",
    "compile": "ts-babel \"packages/*\" && tsc --build test",
    "//compile2": "tsc --build packages/deskgap-builder packages/deskgap-updater packages/deskgap-builder-squirrel-windows",
    "lint": "eslint packages --ext .ts",
    "lint-deps": "node ./test/out/helpers/checkDeps.js",
    "pretest": "yarn compile && yarn lint && node ./test/out/helpers/checkDeps.js",
    "///": "Please see https://github.com/deskgap-userland/deskgap-builder/blob/master/CONTRIBUTING.md#run-test-using-cli how to run particular test instead full (and very slow) run",
    "test": "node ./test/out/helpers/runTests.js skipArtifactPublisher ALL_TESTS=isCi",
    "test-all": "yarn pretest && node ./test/out/helpers/runTests.js",
    "test-linux": "docker run --rm -ti -v ${PWD}:/project -v ${PWD##*/}-node-modules:/project/node_modules -v ~/Library/Caches/deskgap:/root/.cache/deskgap  -v ~/Library/Caches/deskgap-builder:/root/.cache/deskgap-builder deskgapuserland/builder:wine /bin/bash -c \"yarn && TEST_FILES=HoistedNodeModuleTest node ./test/out/helpers/runTests.js\"",
    "docker-images": "docker/build.sh",
    "release": "BABEL_ENV=production yarn compile && ln -f README.md packages/deskgap-builder/README.md && yarn workspaces foreach -p npm publish && yarn dlx -p conventional-changelog-cli conventional-changelog -p angular -i CHANGELOG.md -s",
    "schema": "typescript-json-schema packages/app-builder-lib/tsconfig.json Configuration --out packages/app-builder-lib/scheme.json --noExtraProps --useTypeOfKeyword --strictNullChecks --required && node ./scripts/fix-schema.js",
    "jsdoc": "ts2jsdoc packages/builder-util-runtime packages/builder-util packages/app-builder-lib packages/deskgap-builder packages/deskgap-publish",
    "jsdoc2md": "node scripts/jsdoc2md.js",
    "/////": "git clone --single-branch -b docs git@github.com:deskgap-userland/deskgap-builder.git docs",
    "docs": "tsc -p ./scripts/renderer/tsconfig.json && yarn jsdoc && yarn jsdoc2md",
    "deploy-docs": "mkdocs build --clean && netlifyctl deploy --publish-directory site",
    "////": "pip3 install mkdocs-material mkdocs pymdown-extensions markdown-include Pygments --upgrade"
  },
  "//": "repository must be specified otherwise conventional-changelog will use forked repo (currently cloned)",
  "repository": "https://github.com/deskgap-userland/deskgap-builder",
  "///": "All dependencies for all packages (hoisted)",
  "////": "All typings are added into root `package.json` to avoid duplication errors in the IDE compiler (several `node.d.ts` files).",
  "dependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-transform-modules-commonjs": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "@yarnpkg/pnpify": "^2.0.0-rc.20",
    "babel-core": "^6.26.3",
    "babel-preset-jest": "^25.3.0",
    "bluebird-lst": "^1.0.9",
    "electron-builder-tslint-config": "^1.1.0",
    "eslint": "^6.8.0",
    "fs-extra": "^9.0.0",
    "globby": "^11.0.0",
    "jest-cli": "^25.3.0",
    "jsdoc-to-markdown": "^5.0.3",
    "ts-babel": "6.1.7",
    "ts-jsdoc": "^3.1.1",
    "typescript": "~3.8.3",
    "typescript-json-schema": "^0.42.0"
  },
  "devDependencies": {
    "@ken0x0a/configs": "2.6.11",
    "@types/node": "13.13.0"
  },
  "eslintIgnore": [
    "*.d.ts",
    "out"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/@ken0x0a/commit-config",
      "maxHeaderWidth": 100,
      "maxLineWidth": 100,
      "defaultType": "chore",
      "defaultScope": "",
      "defaultSubject": "--",
      "defaultBody": "",
      "defaultIssues": ""
    }
  }
}
